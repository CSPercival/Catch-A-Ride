# Name of your final executable
TARGET := preprocessor

# Compilers and flags
CXX      := g++
# CXXFLAGS := -Wall -Wextra -std=c++17 -I. -Istructs
CXXFLAGS_RELEASE 	= -std=c++23 -Wall -O3 -Wextra -Wshadow -Wconversion -Wfloat-equal -I. -Istructs
CXXFLAGS_DEBUG 		= -std=c++23 -Wall -O0 -Wextra -Wshadow -Wconversion -Wfloat-equal -g -fsanitize=address,undefined -I. -Istructs
CPPFLAGS := -MMD -MP # Generates .d files to track header dependencies

MODE ?= release
ifeq ($(MODE),release)
	CXXFLAGS = $(CXXFLAGS_RELEASE)
	LDFLAGS = 
else ifeq ($(MODE),debug)
	CXXFLAGS = $(CXXFLAGS_DEBUG)
	LDFLAGS = -fsanitize=address,undefined
else
	$(error Unknown MODE '$(MODE)'; use 'debug' or 'release')
endif

# Directories
SRC_DIRS := . structs
OBJ_DIR  := obj

# Find all .cpp files in the specified directories
SRCS := $(shell find $(SRC_DIRS) -maxdepth 1 -name "*.cpp")

# Map .cpp files to .o files in the obj directory
OBJS := $(SRCS:%.cpp=$(OBJ_DIR)/%.o)

# Include the .d files generated by the compiler
DEPS := $(OBJS:.o=.d)

# Default rule
all: $(TARGET)

# Link the executable
$(TARGET): $(OBJS)
	$(CXX) $(OBJS) $(LDFLAGS) -o $@

# Compile .cpp files to .o files
$(OBJ_DIR)/%.o: %.cpp
	@mkdir -p $(dir $@)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

# Clean up build artifacts
clean:
	rm -rf $(OBJ_DIR) $(TARGET)

# Include dependency files if they exist
-include $(DEPS)

.PHONY: all clean